{
  "name": "id-toolbox",
  "version": "1.0.0",
  "description": "ID库工具箱",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.id-toolbox.myapp",
    "productName": "ID工具箱",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icons/mac/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    }
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "axios": "^1.7.3",
    "bootstrap": "^5.3.3",
    "fs-extra": "^11.2.0",
    "unzipper": "^0.12.3"
  }
}
